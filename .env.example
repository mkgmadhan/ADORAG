# Azure DevOps Configuration
# Your Azure DevOps organization name (from https://{org}.visualstudio.com or https://dev.azure.com/{org})
ADO_ORGANIZATION=your-org-name

# Your Azure DevOps project name
ADO_PROJECT_NAME=your-project-name

# Personal Access Token with Work Items (Read) and Project and Team (Read) permissions
ADO_PAT=your-personal-access-token

# Azure OpenAI Configuration
# Your Azure OpenAI endpoint URL (e.g., https://your-resource.openai.azure.com/)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Azure OpenAI API key
AZURE_OPENAI_KEY=your-openai-api-key

# Deployment name for text-embedding-3-small model
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Deployment name for GPT-4o-mini chat model
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o-mini

# Azure OpenAI API version
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Azure AI Search Configuration
# Your Azure AI Search service endpoint (e.g., https://your-search-service.search.windows.net)
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net

# Azure AI Search admin API key
AZURE_SEARCH_KEY=your-search-admin-key

# Index name for storing work items (will be created automatically)
AZURE_SEARCH_INDEX_NAME=adorag-workitems
